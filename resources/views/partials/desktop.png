{% extends 'base_admin.html.twig' %}

{% block title %}User Dashboard{% endblock %}

{% block body %}
    <div class="page">

        <!-- Main Navbar-->
        <header class="header">
            <nav class="navbar  navbar-dark bg-primary">
                <!-- Search Box-->
              
                <div class="container-fluid">
                    <div class="navbar-holder d-flex align-items-center justify-content-between">
                        <!-- Navbar Header-->
                        <div class="navbar-header">
                            <!-- Navbar Brand --><a href="index.html" class="navbar-brand d-none d-sm-inline-block">
                                <div class="brand-text d-none d-lg-inline-block"><span>User</span><strong>Dashboard</strong></div>
                                <div class="brand-text d-none d-sm-inline-block d-lg-none"><strong>BD</strong></div></a>
                            <!-- Toggle Button--><a id="toggle-btn" href="#" class="menu-btn active"><span></span><span></span><span></span></a>
                        </div>
                        <!-- Navbar Menu -->
                        <ul class="nav-menu list-unstyled d-flex flex-md-row align-items-md-center">
                            <!-- Search-->
                           
                            <!-- Notifications-->
                          
                            <!-- Messages                        -->
                            <!-- Languages dropdown    -->
                            <li class="nav-item"><a href="{{ path('home') }}" class="nav-link logout"> <span class="d-none d-sm-inline">Accueil </span><i class="fa fa-home"></i></a></li>
    
                            <!-- Logout    -->
                            <li class="nav-item"><a href="{{ path('fos_user_security_logout') }}" class="nav-link logout"> <span class="d-none d-sm-inline">Logout</span><i class="fa fa-sign-out"></i></a></li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>


        <div class="page-content d-flex align-items-stretch">


            <!-- Side Navbar -->
            <nav class="side-navbar">
                <!-- Sidebar Header-->
                <div class="sidebar-header d-flex align-items-center">
                    <div class="avatar"><img src="{{ asset('admin_assets/img/avatar-1.jpg') }}" alt="..." class="img-fluid rounded-circle"></div>
                    <div class="title">
                        <h1 class="h4">{{ app.user }}</h1>
                        <p>Web Designer</p>
                    </div>
                </div>
                <!-- Sidebar Navidation Menus--><span class="heading">Main</span>
                <ul class="list-unstyled">
                    <li class="active"><a href="index.html"> <i class="icon-home"></i>Home </a></li>
                    <li><a href="#"> <i class="fa fa-bar-chart"></i>Stats </a></li>
                    <li><a href="#exampledropdownDropdown" aria-expanded="false" data-toggle="collapse"><i class="icon-padnote"></i> Demandes</i>&nbsp &nbsp<span class="badge bg-red badge-corner">{{ stats ?? '0'}}</span></a>
                        <ul id="exampledropdownDropdown" class="collapse list-unstyled ">
                            <li><a href="#">Non lues</a></li>
                            <li><a href="#">En cours</a></li>
                            <li><a href="#">Acceptées</a></li>
                            <li><a href="#">Payées</a></li>
                        </ul>
                    </li>

                </ul>
            </nav>



            <div class="content-inner">
                <!-- Page Header-->
                <header class="page-header">
                    <div class="container-fluid">
                        <h2 class="no-margin-bottom">Dashboard</h2>
                    </div>
                </header>






                <!-- Dashboard Counts Section-->
                <section class="dashboard-counts no-padding-bottom">
                    <div class="container-fluid">
                        <div class="row bg-white has-shadow">
                            <!-- Item -->
                            <div class="col-xl-3 col-sm-6">
                                <div class="item d-flex align-items-center">
                                    <div class="icon bg-violet"><i class="icon-padnote"></i></div>
                                    <div class="title"><span>Toutes les<br>demandes</span>
                                        <div class="progress">
                                            <div role="progressbar" style="width: 25%; height: 4px;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100" class="progress-bar bg-violet"></div>
                                        </div>
                                    </div>
                                    <div class="number"><strong> {{ stats ?? '0'}}</strong></div>
                                </div>
                            </div>
                            <!-- Item -->
                            <div class="col-xl-3 col-sm-6">
                                <div class="item d-flex align-items-center">
                                    <div class="icon bg-red"><i class="icon-padnote"></i></div>
                                    <div class="title"><span>En attente  <br>de paiement</span>
                                        <div class="progress">
                                            <div role="progressbar" style="width: 70%; height: 4px;" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" class="progress-bar bg-red"></div>
                                        </div>
                                    </div>
                                    <div class="number"><strong>{{ waitingPay ?? '0' }}</strong></div>
                                </div>
                            </div>
                            <!-- Item -->
                            <div class="col-xl-3 col-sm-6">
                                <div class="item d-flex align-items-center">
                                    <div class="icon bg-orange"><i class="icon-padnote"></i></div>
                                    <div class="title"><span>En cours <br>de traitement</span>
                                        <div class="progress">
                                            <div role="progressbar" style="width: 50%; height: 4px;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" class="progress-bar bg-orange"></div>
                                        </div>
                                    </div>
                                    <div class="number"><strong>{{ underWay ?? '0' }}</strong></div>
                                </div>
                            </div>
                            <!-- Item -->
                
    
                            <!-- Item -->
                            <div class="col-xl-3 col-sm-6">
                                <div class="item d-flex align-items-center">
                                    <div class="icon bg-green"><i class="icon-padnote"></i></div>
                                    <div class="title"><span>Payées</span>
                                        <div class="progress">
                                            <div role="progressbar" style="width: 40%; height: 4px;" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" class="progress-bar bg-green"></div>
                                        </div>
                                    </div>
                                    <div class="number"><strong>{{ pay ?? '0' }}</strong></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
                <!-- Dashboard Header Section    -->
               {% for type, messages in app.session.flashbag.all() %}
                        {% for message in messages %}
                        <div class="alert alert-{{ type }} alert-dismissable" role="alert">
                            <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                            {{ message | raw }}

                        </div>
                            {% endfor %}
                    {% endfor %}
                <!-- Projects Section-->
               
                <section class="projects">
                    <div class="container-fluid">
                        {% if lastrequest is defined and lastrequest > 0  %}
                        {% for lr in lastrequest  %}
    
                            {% if lr[0].name =="Hotel" %}
                        <!-- Project-->
                        <div class="project">
                            <div class="row bg-white has-shadow">
                                <div class="left-col col-lg-6 d-flex align-items-center justify-content-between">
                                    <div class="project-title d-flex align-items-center">
                                        <div class="image has-shadow"><img src="https://d19m59y37dris4.cloudfront.net/admin/1-4-5/img/project-1.jpg" alt="..." class="img-fluid"></div>
                                        <div class="text">
                                            <a href="dsd">
                                          <h3 class="h4">{{ lr[0].name }}</h3><small>Nouvelle demande d'hotel dans la ville de {{ lr[0].hotel.city }}</small>
                                            </a>
                                        </div>
                                    </div>
                                    <div class="project-date"><span class="hidden-sm-down">{{ lr[0].createdAd|date('d F Y') }}</span></div>
                                </div>
                                <div class="right-col col-lg-6 d-flex align-items-center">
                                    <div class="time"><i class="fa fa-clock-o"></i>{{ lr[0].createdAd|date('h:i A') }}</div>
                                    <div class="comments"><i class="fa fa-comment-o"></i>20</div>
                                    <div class="articles">
                                        <div class="badge bg-yellow">{{ lr.status }}</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Project-->
                         {% endif %}
    
    
    
                            {% if lr[0].name =="Cars" %}
                                <!-- Project-->
                                <div class="project">
                                    <div class="row bg-white has-shadow">
                                        <div class="left-col col-lg-6 d-flex align-items-center justify-content-between">
                                            <div class="project-title d-flex align-items-center">
                                                <div class="image has-shadow"><img src="https://d19m59y37dris4.cloudfront.net/admin/1-4-5/img/project-1.jpg" alt="..." class="img-fluid"></div>
                                                <div class="text">
                                                    <h3 class="h4">{{ lr[0].name }}</h3><small>Nouvelle demande de location de voiture dans la ville de {{ lr[0].cars.city }}</small>
                                                </div>
                                            </div>
                                            <div class="project-date"><span class="hidden-sm-down">{{ lr[0].createdAd|date('d F Y') }}</span></div>
                                        </div>
                                        <div class="right-col col-lg-6 d-flex align-items-center">
                                            <div class="time"><i class="fa fa-clock-o"></i>{{ lr[0].createdAd|date('h:i A') }}</div>
                                            <div class="comments"><i class="fa fa-comment-o"></i>20</div>
                                            <div class="articles">
                                                <div class="badge bg-yellow">{{ lr.status }}</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- Project-->
                            {% endif %}
                        {% endfor %}
                        {% endif %}
                       
                    </div>
                </section>
                <!-- Page Footer-->
                <footer class="main-footer">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-sm-6">
                                <p>Your company &copy; 2017-2019</p>
                            </div>
                            <div class="col-sm-6 text-right">
                                <p>Design by <a href="https://bootstrapious.com/p/admin-template" class="external">Bootstrapious</a></p>
                                <!-- Please do not remove the backlink to us unless you support further theme's development at https://bootstrapious.com/donate. It is part of the license conditions. Thank you for understanding :)-->
                            </div>
                        </div>
                    </div>
                </footer>
            </div>
        </div>
    </div>
{% endblock %}
